<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/set_remotecontrol"
    style="@style/tovos_ll_style">

    <RelativeLayout
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/set_title_height">

        <RelativeLayout
            android:id="@+id/remotecontrol_rl"
            android:layout_width="@dimen/set_title_height"
            android:layout_height="@dimen/set_title_height">

            <ImageView
                android:layout_marginLeft="14dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back"
                />


        </RelativeLayout>


        <TextView
            android:layout_centerInParent="true"
            style="@style/tovos_tv_style"
            android:text="遥控器设置"

            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sksz"
        style="@style/tovos_rl_style">

        <TextView
            style="@style/leftdialog_tv_style"
            android:text="双控设置:"
           >

        </TextView>

        <RadioGroup
            android:background="@color/transparent"
            android:id="@+id/sk_st_rg"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <RadioButton
                android:id="@+id/sk_st_rb"
                android:text="主控"
                style="@style/tovos_rb_style"/>


            <RadioButton
                android:id="@+id/sk_st_rb2"
                android:text="辅控"
                style="@style/tovos_rb_style"/>



        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        style="@style/tovos_rl_style">

        <TextView
            style="@style/leftdialog_tv_style"
            android:text="摇杆模式:"
           >

        </TextView>


        <RadioGroup
            android:background="@color/transparent"
            android:id="@+id/mapping_style_group"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/style_1_rb"
                android:text="日本手"
                style="@style/tovos_rb_style"
                android:checked="true"
               />



            <RadioButton
                android:id="@+id/style_2_rb"
                android:text="美国手"
                style="@style/tovos_rb_style"/>


            <RadioButton
                android:id="@+id/style_3_rb"
                android:text="中国手"
                style="@style/tovos_rb_style"/>



        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/remote_jz_rl"
        style="@style/tovos_rl_style">

        <TextView
            style="@style/leftdialog_tv_style"
            android:text="遥控器校准"
         >

        </TextView>

        <ImageView
            android:src="@mipmap/next"
            android:layout_marginRight="12.3dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rtk_channel_rl"
        android:layout_marginBottom="@dimen/set_item_space_small"
        style="@style/tovos_rl_style">


        <Switch
            android:id="@+id/rtk_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

        </Switch>

        <TextView
            style="@style/leftdialog_tv_style"
            android:text="启用RTK通道:"
            >

        </TextView>



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/multi_device_pairing_rl"
        android:layout_marginBottom="@dimen/set_item_space_small"
        style="@style/tovos_rl_style">

        <Switch
            android:id="@+id/multi_device_pairing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

        </Switch>

        <TextView
            style="@style/leftdialog_tv_style"
            android:text="多设备配对:"
            >

        </TextView>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/remote_checked"
        android:layout_marginBottom="@dimen/set_item_space_small"
        style="@style/tovos_rl_style">

        <TextView
            style="@style/leftdialog_tv_style"
            android:layout_centerInParent="true"
            android:text="遥控器对频"
          >

        </TextView>

    </RelativeLayout>

</LinearLayout>
