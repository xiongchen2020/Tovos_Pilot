<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RadioGroup
        android:visibility="gone"
        android:id="@+id/group2"
        android:layout_marginRight="@dimen/infared_thermal_to_right"
        android:background="@drawable/waypoint_jd_shape"
        android:layout_marginTop="@dimen/infared_thermal_to_top"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_marginLeft="5dp"
            android:checked="true"
            android:id="@+id/wd_rb1"
            android:text="热感"
            android:textSize="@dimen/fxjl_text"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </RadioButton>

        <RadioButton

            android:id="@+id/wd_rb2"
            android:text="分屏"
            android:checked="true"
            android:textSize="@dimen/fxjl_text"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </RadioButton>

        <RadioButton
            android:layout_marginRight="5dp"
            android:checked="true"
            android:id="@+id/wd_rb3"
            android:text="MSX"
            android:textSize="@dimen/fxjl_text"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </RadioButton>

        <RadioButton
            android:layout_marginRight="5dp"
            android:checked="true"
            android:id="@+id/wd_rb4"
            android:text="可见光"
            android:textSize="@dimen/fxjl_text"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </RadioButton>

    </RadioGroup>




    <RadioGroup
        android:visibility="gone"
        android:background="@drawable/waypoint_jd_shape"
        android:id="@+id/camera_group"
        android:layout_marginRight="16dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb1"
            android:text="变焦"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/fxjl_text"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </RadioButton>

        <RadioButton
            android:id="@+id/rb2"
            android:text="广角"
            android:checked="true"
            android:textSize="@dimen/fxjl_text"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </RadioButton>


        <RadioButton
            android:id="@+id/rb3"
            android:text="红外"
            android:checked="true"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/fxjl_text"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </RadioButton>

    </RadioGroup>

</RelativeLayout>
