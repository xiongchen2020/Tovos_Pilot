<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll"
    android:layout_height="wrap_content">

    <RelativeLayout
        style="@style/tovos_rl_style">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/set_item_height">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/name"
                    android:text="任务名称"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/route_task_type"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    style="@style/tovos_tv_style"/>


                <TextView
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:id="@+id/route_task_type"
                    android:text="任务名称"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:singleLine="true"
                    android:layout_width="48dp"
                    style="@style/tovos_tv_style"/>



            </RelativeLayout>

        </LinearLayout>


        <CheckBox
            android:id="@+id/checked"
            android:background="@drawable/selector_check"
            android:button="@null"
            android:layout_alignParentBottom="true"
            android:layout_width="9dp"
            android:layout_height="9dp"/>

    </RelativeLayout>


</LinearLayout>
