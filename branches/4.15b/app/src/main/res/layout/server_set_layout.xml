<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/tovos_ll_style"
    android:id="@+id/server_layout"
    android:layout_height="@dimen/set_layout_width">

    <RelativeLayout
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/set_title_height">

        <RelativeLayout
            android:id="@+id/server_back_rl"
            android:layout_width="@dimen/set_title_height"
            android:layout_height="@dimen/set_title_height">

            <ImageView
                android:layout_marginLeft="14dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back"
                />


        </RelativeLayout>

        <TextView

            android:layout_centerInParent="true"
            style="@style/tovos_tv_style"
            android:text="服务器设置"

            />

        <TextView
            android:id="@+id/server_sure"
            android:layout_centerInParent="true"
            style="@style/leftdialog_tv_right_style"
            android:text="确认"

            />

    </RelativeLayout>

    <RelativeLayout
        style="@style/tovos_rl_style">

        <TextView
           style="@style/leftdialog_tv_style"
            android:text="服务器地址:"
          >

        </TextView>

        <EditText
            android:id="@+id/server_ip"
           style="@style/rtkset_right_style">

        </EditText>

    </RelativeLayout>

</LinearLayout>
