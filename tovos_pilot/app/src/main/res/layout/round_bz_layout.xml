<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/around_bz_ll"
    android:background="@drawable/selected_set_item_shape"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
        android:id="@+id/round_bz_rl"
        android:layout_width="@dimen/set_item_width"
        android:layout_height="@dimen/set_item_height"
        android:background="@color/transparent">

        <Switch
            android:id="@+id/swith_aroundbz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>


        <TextView
           style="@style/leftdialog_tv_style"
            android:text="四向避障:"
         />



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/around_bz_set"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginBottom="@dimen/set_item_space_small"
            android:background="@drawable/selected_set_item_shape"
            android:layout_width="@dimen/set_item_width"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="11dp"
                android:layout_marginTop="@dimen/seekbar_text_martin_top"
                style="@style/tovos_tv_style"
                android:text="避障安全距离"
              />

            <TextView
                android:id="@+id/bzjl_tx"
                style="@style/leftdialog_tv_right_style"
                android:text="15m"
               />

            <SeekBar
                android:id="@+id/bzjl"
                android:layout_marginTop="@dimen/seekbar_martin_top"
                android:layout_centerHorizontal="true"
                android:max="5"
                android:min="1"
                android:progress="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <TextView
                style="@style/tovos_tv_style"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="@dimen/seekbar_text_martin_top2"
                android:text="警告距离"
              />

            <TextView
                android:id="@+id/jgjl_tx"
                style="@style/leftdialog_tv_right_style"
                android:layout_marginTop="@dimen/seekbar_text_martin_top2"
                android:text="5m"
               />

            <SeekBar
                android:id="@+id/jgjl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/set_item_space_small"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/seekbar_martin_top2"
                android:max="45"
                android:min="5"
                android:progress="5"/>



        </RelativeLayout>

    </RelativeLayout>



</LinearLayout>
