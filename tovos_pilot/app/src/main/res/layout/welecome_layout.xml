<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#0A2139"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/welecome_bg_martin_top"
        android:layout_marginRight="@dimen/welecome_bg_martin_right"
        android:layout_marginBottom="@dimen/welecome_bg_martin_buttom"
        android:background="@mipmap/welecome_gb">

        <ImageView
            android:id="@+id/welecome_flight"
            android:background="@color/transparent"
            android:layout_width="@dimen/welecome_flight_width"
            android:layout_height="@dimen/welecome_flight_width"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/welecome_flight_martin_top"
            android:layout_marginRight="@dimen/welecome_flight_martin_right"
            android:src="@mipmap/welecome_flight">

        </ImageView>

    </RelativeLayout>

    <ImageView
        android:layout_alignParentBottom="true"
        android:background="@mipmap/welecome_side"
        android:layout_width="match_parent"
        android:layout_height="@dimen/welecome_bg_martin_buttom">

    </ImageView>

    <ImageView
        android:background="@color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/welecome_logo"
        android:layout_marginBottom="@dimen/welecome_icon_martin_buttom"
        android:layout_width="@dimen/welecome_icon_width"
        android:layout_height="@dimen/welecome_icon_height">

    </ImageView>

    <ImageView
        android:background="@color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/welecome_title"
        android:layout_marginBottom="@dimen/welecome_title_martin_buttom"
        android:layout_width="@dimen/welecome_title_width"
        android:layout_height="@dimen/welecome_title_height">

    </ImageView>

</RelativeLayout>
